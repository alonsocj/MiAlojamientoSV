<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:id="@+id/rlContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardViewHotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivHotel"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop"/>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView_hotel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="325dp"
                android:text="@string/hotel_title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_hotel_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_hotel_title"
                android:layout_marginStart="20dp"
                android:text="@string/hotel_description"
                android:textAlignment="textStart"
                android:layout_marginBottom="10dp"
                android:textSize="15sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/textView_hotel_title"
                android:layout_toEndOf="@+id/textView_hotel_description"
                android:background="@drawable/ic_star_complete" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
