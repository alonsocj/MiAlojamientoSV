<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp"
            card_view:contentPaddingBottom="15dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationFavorite"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="370dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/favoriteheart" />

            <ImageView
                android:id="@+id/ivHotel"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="fitXY"
                android:foreground="?android:attr/selectableItemBackground" />


            <TextView
                android:id="@+id/textView_hotel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="230dp"
                android:text="@string/hotel_title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_hotel_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="260dp"
                android:text="@string/hotel_description"
                android:textAlignment="textStart"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>
